#!/bin/sh

current=$(cat /sys/class/power_supply/BAT0/capacity)
status=$(cat /sys/class/power_supply/BAT0/status)

[ $status = "Charging" ] && icon="ğŸ”Œ" || { [ $current -le 30 ] && icon=ğŸª« || icon=ğŸ”‹ ;}
[ $status = "Discharging" ] && { [ $current -eq 14 ] || [ $current -eq 10 ] || [ $current -eq 5 ] ;} && notify-send "ğŸª«" "Battery low!"
echo "$icon$current"
