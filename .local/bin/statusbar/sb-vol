#!/bin/sh

# alsa
#level=$(amixer sget PCM | awk -F"[][]" '/Left:/ {print $2}' | sed 's/\%//')

# pulse (pulsemixer)
level=$(pulsemixer --get-volume | awk '{print $1}')
mute=$(pulsemixer --get-mute)

if [ $mute -eq 1 ];then
	icon="ðŸ”‡"
	printf "%s" "${icon}"
	exit
elif [ $level -gt 100 ];then
	icon="ðŸ“¢"
elif [ $level -gt 60 ];then
	icon="ðŸ”Š"
elif [ $level -gt 30 ];then
	icon="ðŸ”‰"
elif [ $level -gt 0 ];then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‡"
	exit
fi

printf "%s" "${icon}${level}"
